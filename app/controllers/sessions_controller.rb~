class SessionsController < ApplicationController
  def new
    #renderöi kirjautumissivun
  end

  def create
    #heataan usernamea vastaava käyttäjä tietokannasta
    user = User.find_by username: params[:username]
    if user.nil?
      redirect_to :back
    else
      session[:user_id] = user.id
      redirect_to user
    end
  end

  def destroy
    # nollataan sessio
    session[:user_id] = nil
    # uudelleenohjataan sovellus pääsivulle
    redirect_to :root
  end
end
